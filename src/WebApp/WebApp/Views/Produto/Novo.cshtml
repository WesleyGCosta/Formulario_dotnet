@model WebApp.Models.ProdutoViewModel

<h1>Cadastro de Produto</h1>

<form asp-action="Novo">
    <div class="card">
        <div class="card-header text-center">Produtos</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <label asp-for="Descricao"></label>
                    <input type="text" asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Valor"></label>
                    <input type="text" asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger text-center"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Tipo"></label>
                    <input type="text" asp-for="Tipo" class="form-control" />
                    <span asp-validation-for="Tipo" class="text-danger text-center"></span>

                </div>
            </div>
        </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-2">
                    <input type="submit" value="Gravar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
</form>

<hr />

<div class="row">
    <div class="col-md-2">
        <a class="btn btn-dark" asp-controller="Produto" asp-action="Index">Voltar</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}